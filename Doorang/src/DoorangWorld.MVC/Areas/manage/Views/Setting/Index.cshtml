@using DoorangWorld.Core.Entities;

@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
@model List<Setting>
<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">NO</th>
            <th scope="col">Title</th>
            <th scope="col">Text1</th>
            <th scope="col">text2</th>
            <th scope="col">description</th>
            <th scope="col">actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Key</td>
                <td>@item.Value</td>
                <div>
                    <a asp-action="update" asp-controller="setting" asp-route-id="@item.Id" class="btn btn-warning"></a>
                </div>

            </tr>
        }

    </tbody>
</table>