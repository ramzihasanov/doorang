@using DoorangWorld.Core.Entities;
@model List<ExploreWorld>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">NO</th>
            <th scope="col">Title</th>
            <th scope="col">description</th>
            <th scope="col">text1</th>
            <th scope="col">text2</th>
            <th scope="col">Isdeleted</th>
            <th scope="col">image</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Title</td>
                <td>@item.Desccription</td>
                <td>@item.Text1</td>
                <td>@item.Text2</td>
                <td>@item.Isdeleted</td>
                <td> <img  width="100px" src="~/uploads/@item.Imageurl"/></td>
                
                 <td>
                    <a asp-action="update" asp-controller="exploreworld" asp-route-id="@item.Id" class="btn btn-warning">update</a>
                    <a asp-action="delete" asp-controller="exploreworld" asp-route-id="@item.Id" class="btn btn-danger">delete</a>
                 </td>
                

            </tr>
        }
    
    </tbody>
</table>